<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.abahnj.confession.MainActivity"
    tools:showIn="@layout/activity_main">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_gap"
        android:layout_weight="1"
        android:elevation="@dimen/cardview_default_elevation"
        android:onClick="examination"
        app:cardCornerRadius="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/examination1" />

        <TextView
            android:textStyle="bold"
            android:textSize="14sp"
            android:padding="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="end|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:alpha=".7"
            android:background="@color/grey"
            android:text="@string/examination"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_gap"
        android:layout_weight="1"
        android:elevation="@dimen/cardview_default_elevation"
        android:onClick="confession"
        app:cardCornerRadius="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/examination" />
        <TextView
            android:textStyle="bold"
            android:textSize="14sp"
            android:padding="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="end|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:alpha=".7"
            android:background="@color/grey"
            android:text="@string/confession"
           />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_gap"
        android:layout_weight="1"
        android:elevation="@dimen/cardview_default_elevation"
        android:onClick="prayers"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/prayers" />
        <TextView
            android:textStyle="bold"
            android:textSize="14sp"
            android:padding="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="end|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:alpha=".7"
            android:background="@color/grey"
            android:text="@string/prayers"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_gap"
        android:layout_weight="1"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        android:onClick="guide"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/guide" />
        <TextView
            android:textStyle="bold"
            android:textSize="14sp"
            android:padding="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="end|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:alpha=".7"
            android:background="@color/grey"
            android:text="@string/guide"/>
    </android.support.v7.widget.CardView>

</LinearLayout>
